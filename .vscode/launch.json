{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "cwd": "${workspaceFolder}",
      "args": [
        // "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--setupFilesAfterEnv",
        "${workspaceFolder}/scripts/jest-debug-setup.js",
        "--config",
        "${workspaceFolder}/jest.config.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run local test",
      "cwd": "${workspaceRoot}/packages/codegen",
      "args": [
        "--run",
        "--force"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "${workspaceFolder}/scripts/enable-ts",
        "${workspaceRoot}/packages/codegen/src/LocalTest.ts"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}